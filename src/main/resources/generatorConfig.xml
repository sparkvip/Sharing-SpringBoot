<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!--oracle驱动位置-->
    <classPathEntry location="E:\Oracle\product\11.2.0\dbhome_2\jdbc\lib\ojdbc6.jar" />

    <context id="Oracle" defaultModelType="flat">
        <!-- 生成的POJO实现java.io.Serializable接口 -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />

        <!--注释-->
        <!--<commentGenerator>-->
            <!--&lt;!&ndash; 将数据库中表的字段描述信息添加到注释 &ndash;&gt;-->
            <!--<property name="addRemarkComments" value="true"/>-->
            <!--&lt;!&ndash; 注释里不添加日期 &ndash;&gt;-->
            <!--&lt;!&ndash;<property name="suppressDate" value="true"/>&ndash;&gt;-->
        <!--</commentGenerator>-->
        <!--数据路连接信息-->
        <jdbcConnection
                driverClass="oracle.jdbc.OracleDriver"
                connectionURL="jdbc:oracle:thin:@localhost:1521:orcl"
                userId="sharing"
                password="sharing"/>

        <!-- 生成POJO对象，并将类放到com.songguoliang.springboot.entity包下 -->
        <javaModelGenerator targetPackage="com.baomidou.springboot.entity" targetProject="src/main/java"></javaModelGenerator>
        <!-- 生成mapper xml文件，并放到resources下的mapper文件夹下 -->
        <sqlMapGenerator targetPackage="mapper"  targetProject="src/main/resources"></sqlMapGenerator>

        <!-- 生成mapper xml对应dao接口-->
        <javaClientGenerator targetPackage="com.baomidou.springboot.mapper" targetProject="src/main/java" type="XMLMAPPER"></javaClientGenerator>

        <!-- table标签可以有多个，至少一个，tableName指定表名，可以使用_和%通配符 -->
        <table tableName="resource_comment">
            <!-- 是否只生成POJO对象 -->
            <property name="modelOnly" value="false"/>
            <!-- 数据库中表名有时我们都会带个前缀，而实体又不想带前缀，这个配置可以把实体的前缀去掉 -->
            <!--<domainObjectRenamingRule searchString="^Tbl" replaceString=""/>-->
        </table>
    </context>
</generatorConfiguration>
