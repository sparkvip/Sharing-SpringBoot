    <sql id="base_select">
        re.id,re.name,re.category,re.user_id,re.path,re.download_amount,re.upload_time,re.introduction,re.is_shared,re.file_type
    </sql>
    <select id="queryAll" resultType="com.baomidou.springboot.entity.ResourceInfo">
        select
        <include refid="base_select" />
        ,
        u.name user_name,
        row_number() over(order by re.download_amount desc) as resource_index
        from resource_info re, users u
        where u.id = re.user_id
        order by re.download_amount desc
    </select>
